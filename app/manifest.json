{
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "images/icon-16.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/background.js",
                "scripts/content_script.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_end"
        }
    ],
    "default_locale": "en",
    "description": "__MSG_appDescription__",
    "icons": {
        "128": "images/icon-128.png",
        "16": "images/icon-16.png"
    },
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "version": "0.0.1"
}
